@model OpenSpacePlanner.Contracts.INosSession

@{
    ViewBag.Title = "Session vorschlagen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset style="margin-top: 30px">
        <legend>Session vorschlagen</legend>

       

        <div class="editor-label">
            Titel
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>

       

        <div class="editor-label">
            Session Owner Tag
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.OwnerTag)
            @Html.ValidationMessageFor(model => model.OwnerTag)
        </div>

        <div class="editor-label">
            Beschreibung
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Description, 10,50,null)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <p>
            <input type="submit" value="Session vorschlagen" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Zur Session-Übersicht", "Index")
</div>

